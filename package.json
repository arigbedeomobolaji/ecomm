{
	"name": "ecomm",
	"type": "module",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"client": "npm run start --prefix client",
		"server:dev": "nodemon --exec node --experimental-modules server.js",
		"server:prod": "cross-env NODE_ENV=production nodemon --exec node --experimental-modules server.js",
		"dev": "concurrently \"npm run server:dev\" \"npm run client\"",
		"prod": "concurrently \"npm run server:prod\" \"npm run client\"",
		"start": "nodemon --watch backend --exec node --experimental-modules backend/server.js",
		"build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
		"heroku-postbuild": "npm run build"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"aws-sdk": "^2.1005.0",
		"bcryptjs": "^2.4.3",
		"cross-env": "^7.0.3",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-async-handler": "^1.1.4",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.4",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"concurrently": "^6.3.0",
		"eslint": "^7.24.0",
		"eslint-plugin-react": "^7.23.2",
		"nodemon": "^2.0.7"
	}
}
